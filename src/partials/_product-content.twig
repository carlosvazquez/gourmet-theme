<div class="container page product-page">
  <div class="row">
    <div class="col-md-9 col-md-push-3">
      <div class="row">
        <div class="carousel">
          <div class="col-xs-12 col-sm-6 col-md-8">
            <div class="slider">
            {% if product.images | length == 0 %}
              <div class="main-product slider__slide slide_1">
                <img class="img-responsive slider__image" src="images/shushies.jpg" id="zoom">
                <img class="img-responsive slider__imag-placeholder" src="{{ 'placeholders/product-15.jpg' | global_img_url }}" alt="{{ product.name }}" id="zoom">
              </div>
            {% elseif product.images | length == 1 %}
            <div class="carousel__container">
                <img class="img-responsive carousel__image" src="{{ product.image_url }}&w=600&h={{ height }}&fit=crop" width="600" alt="{{ product.name }}" id="zoom">
              </div>
            {% else %}
            <div class="carousel__container">
                <img class="img-responsive carousel__image" src="{{ product.image_url }}&w=600&h={{ height }}&fit=crop" width="600" alt="{{ product.name }}" id="zoom">
              </div>
            {% endif %}
            </div>
            <div class="row">
              {% if product.images | length > 1 %}
              <div class="col-xs-12">
                <div class="slider-product slider-nav">
                  {% for thumbnail in product.images %}
                    <div class="slider-nav__item">
                      <img class="slider-nav__image" src="{{ thumbnail.url }}" alt="{{ product.name }}">
                      <img class="slider-nav__image" src="images/shushies.jpg" alt="{{ product.name }}">
                    </div>
                    <div class="slider-nav__item">
                      <img class="slider-nav__image" src="{{ thumbnail.url }}" alt="{{ product.name }}">
                      <img class="slider-nav__image" src="images/salad.jpg" alt="{{ product.name }}">
                    </div>
                    <div class="slider-nav__item">
                      <img class="slider-nav__image" src="{{ thumbnail.url }}" alt="{{ product.name }}">
                      <img class="slider-nav__image" src="images/pasta.jpg" alt="{{ product.name }}">
                    </div>
                    <div class="slider-nav__item">
                      <img class="slider-nav__image" src="{{ thumbnail.url }}" alt="{{ product.name }}">
                      <img class="slider-nav__image" src="images/shushies.jpg" alt="{{ product.name }}">
                    </div>
                    <div class="slider-nav__item">
                      <img class="slider-nav__image" src="{{ thumbnail.url }}" alt="{{ product.name }}">
                      <img class="slider-nav__image" src="images/salad.jpg" alt="{{ product.name }}">
                    </div>
                    <div class="slider-nav__item">
                      <img class="slider-nav__image" src="{{ thumbnail.url }}" alt="{{ product.name }}">
                      <img class="slider-nav__image" src="images/pasta.jpg" alt="{{ product.name }}">
                    </div>
                  {% endfor %}
                </div>
              </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>